security:

    encoders:
        App\DDD\Domain\Entity\User\User:
            algorithm: argon2i
            cost: 12

    providers:
        database_users:
            entity:
                class: App\DDD\Domain\Entity\User\User
                property: email

    firewalls:

        dev:
            pattern: ^/(_(profiler|wdt)|css|images|js)/
            security: false

        main:
            anonymous: true
            provider: database_users
            #guard:
            #    authenticators:
            #        - App\DDD\Domain\Security\Authenticator\LoginFormAuthenticator
            form_login:
                check_path: security_login
                login_path: security_login
                default_target_path: /home

    access_control:
        - { path: ^/home, roles: ROLE_USER }

